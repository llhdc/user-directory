<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Directory</title>
    <link rel="stylesheet" href="./public/styles.css">
  </head>
  <body>
    <section class="wrapper">
      <ul>
        {{#users}}
          <li>
            <img src="{{avatar}}" alt="">
            <a href="./{{id}}"><h3>{{name}}</h3></a>
            {{#job}}
              <p>{{job}}, {{company}}</p>
            {{/job}}
            {{^job}}
              <p id="noJob">Available for hire</p>
            {{/job}}
          </li>
        {{/users}}
      </ul>
    </section>

  </body>
</html>
